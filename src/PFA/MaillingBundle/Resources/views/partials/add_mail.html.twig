<div id="send_mail_modal" class="modal" style="width: 90% !important;">
    <div class="modal-content">
        <h4>Ajouter un dossier</h4>
        <div id="send-mail-modal-zone">
            {{ form_start(form, {"attr": {"class": "col s6_ well_ offset-m3 sendMail"} }) }}
            <div class="row">
                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(form.receivers, {"attr":{}}) }}
                        {{ form_label(form.receivers) }}
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(form.subject, {"attr":{}}) }}
                        {{ form_label(form.subject) }}
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(form.body, {"attr":{}}) }}
                        {{ form_label(form.body) }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="modal-footer">
        <!--<a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat ">Disagree</a> -->
        <a href="javascript:;" class="modal-action modal-close waves-effect waves-green btn-flat" i>Fermer</a>
    </div>
</div>