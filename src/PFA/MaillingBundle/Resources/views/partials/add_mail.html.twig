<div id="send_mail_modal" class="modal" style="width: 65% !important;">
    <div class="modal-content">
        <h4>Nouveau Mail</h4>
        <div id="send-mail-modal-zone">
            {{ form_start(form, {"attr": {"class": "col_ s6_ well_ _offset-m3 send_mail_form", "enctype": "multipart/form-data"} }) }}
            <div class="row">
                <div class="row">
                    <div class="input-field col s12">
                        <select name="recievers[]" id="recievers" style="width: 100%" multiple></select>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(form.subject, {"attr":{}}) }}
                        {{ form_label(form.subject) }}
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(form.body, {"attr":{}}) }}
                        {{ form_label(form.body) }}
                    </div>
                </div>

                <div class="row" id="attachements">
                   <div class='input-field col s10 attachement_row_'>
                      <div class='file-field input-field'>
                            <div class='btn'>
                                <span>Sélectionner un Fichier</span>
                                {{ form_widget(form.attachements) }}
                            </div>
                            <div class='file-path-wrapper'>
                                <input class='file-path validate' type='text'>
                            </div>
                        </div>
                    </div>

                    <div class="input-field col s2">
                        <a href="javascript:;" class="btn tooltipped" id="add_attachement" data-position="bottom" data-delay="5" data-tooltip="Ajouter une pièce jointe.">
                            <i class="material-icons">add</i>
                        </a>
                    </div>
                </div>

                <div class="row">
                    <span class="upload-status teal hide col md5 offset-m1"></span>
                    <button type="submit" class="btn btn-flat green right" id="send_mail_btn" >Envoyer</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="modal-footer">
        <!--<a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat ">Disagree</a> -->
        <a href="javascript:;" class="modal-action modal-close waves-effect waves-green btn-flat" i>Fermer</a>
    </div>
</div>