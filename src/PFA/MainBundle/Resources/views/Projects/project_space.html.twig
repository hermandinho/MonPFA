{% extends "PFACoreBundle::layout.html.twig" %}

{% block title %}
    Project Space
{% endblock %}

{% block page_title %}
    Espace {{ project.name|upper }}
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col s12 m6 l3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Discussions</span>
                    <p class="center">
                        <i class="fa fa-photo center fa-4x"></i>
                    </p>
                    <p class="truncate">
                        Espace de discution de ce projet.
                    </p>
                </div>
                <span>
                    <a class="card-action card-action-block" href="{{ path("chat_room_home",{"project": project.id}) }}" target="_blank" class="right">Discuter</a>
                </span>
            </div>
        </div>

        <div class="col s12 m6 l3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Documents</span>
                    <p class="center">
                        <i class="fa fa-book center fa-4x"></i>
                    </p>
                    <p class="truncate">
                        Espace de de partage de ressources(documents, fichiers ...) de ce projet.
                    </p>
                </div>
                <span>
                    <a class="card-action card-action-block" href="{{ path("project_documents_home",{"project": project.id}) }}" target="_blank" class="right">Partager les ressources</a>
                </span>
            </div>
        </div>

        <div class="col s12 m6 l3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Forum</span>
                    <p class="center">
                        <i class="fa fa-users center fa-4x"></i>
                    </p>
                    <p class="truncate">
                        Espace de de d'échange de ce projet.
                    </p>
                </div>
                <span>
                    <a class="card-action card-action-block" href="{{ path("forum_home",{"project": project.id}) }}" target="_blank" class="right">Ecnhanger les idées</a>
                </span>
            </div>
        </div>

        <div class="col s12 m6 l3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Calendrier</span>
                    <p class="center">
                        <i class="fa fa-calendar center fa-4x"></i>
                    </p>
                    <p class="truncate">
                        Calendrier de ce projet.
                    </p>
                </div>
                <span>
                    <a class="card-action card-action-block" href="{{ path("project_calender",{"project": project.id}) }}" target="_blank" class="right">Définir le calendrier</a>
                </span>
            </div>
        </div>

        {% if project.owner.id == app.user.id %}
            <div class="col s12 m6 l3">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Paramétrages</span>
                        <p class="center">
                            <i class="fa fa-gear center fa-4x"></i>
                        </p>
                        <p class="truncate">
                            Espace de configuration du projet.
                        </p>
                    </div>
                    <span>
                        <a class="card-action card-action-block" href="{{ path("project_settings",{"id": project.id}) }}" target="_blank" class="right">Configurer le projet</a>
                    </span>
                </div>
            </div>
        {% endif %}

    </div>
{% endblock %}