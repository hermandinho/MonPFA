{% extends "PFACoreBundle::layout.html.twig" %}

{% block title %}
    Project Space
{% endblock %}

{% block page_title %}
    <h3 class="center page-header">Espace {{ project.name|upper }}</h3>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col s12 m6 l3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Discussions</span>
                    <p class="center">
                        <i class="large material-icons center">chat_bubble</i>
                    </p>
                    <p class="truncate">
                        Espace de discution de ce projet.
                    </p>
                </div>
                <div class="card-action">
                    <a href="{{ path("chat_room_home",{"project": project.id}) }}" target="_blank" class="right">Aller</a>
                </div>
            </div>
        </div>

        <div class="col s12 m6 l3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Documents</span>
                    <p class="center">
                        <i class="large material-icons center">library_books</i>
                    </p>
                    <p class="truncate">
                        Espace de de partage de ressources(documents, fichiers ...) de ce projet.
                    </p>
                </div>
                <div class="card-action">
                    <a href="{{ path("project_documents_home",{"project": project.id}) }}" target="_blank" class="right">Aller</a>
                </div>
            </div>
        </div>

        <div class="col s12 m6 l3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Forum</span>
                    <p class="center">
                        <i class="large material-icons center">forum</i>
                    </p>
                    <p class="truncate">
                        Espace de de d'échange de ce projet.
                    </p>
                </div>
                <div class="card-action">
                    <a href="{{ path("forum_home",{"project": project.id}) }}" target="_blank" class="right">Aller</a>
                </div>
            </div>
        </div>

        <div class="col s12 m6 l3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Calendrier</span>
                    <p class="center">
                        <i class="large material-icons center">today</i>
                    </p>
                    <p class="truncate">
                        Calendrier de ce projet.
                    </p>
                </div>
                <div class="card-action">
                    <a href="{{ path("project_calender",{"project": project.id}) }}" target="_blank" class="right">Aller</a>
                </div>
            </div>
        </div>

        {% if project.owner.id == app.user.id %}
            <div class="col s12 m6 l3">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Paramétrages</span>
                        <p class="center">
                            <i class="large material-icons center">settings</i>
                        </p>
                        <p class="truncate">
                            Espace de configuration du projet.
                        </p>
                    </div>
                    <div class="card-action">
                        <a href="{{ path("project_settings",{"id": project.id}) }}" target="_blank" class="right">Aller</a>
                    </div>
                </div>
            </div>
        {% endif %}

    </div>
{% endblock %}